<li class="@TypeName" horizontal>

    <div class="type"/>

    <section vertical>
        <p class="label">@Entry.Description</p>
        @if (Entry.For != null)
        {
            <i class="who">for @Entry.For</i>
        }
        @if (Entry.By != null && Entry.To != null)
        {
            <i class="who" inline>
                by
                <span>@Entry.By</span>
                to
                <span>@Entry.To</span>
            </i>
        }
    </section>
    
    <section vertical>
        <time datetime="@Entry.At">@Entry.At.ToLongDateString()</time>
        <var>@Entry.Amount CHF</var>
    </section>

    <menu>
        <button @onclick=@Delete>✕</button>
    </menu>
</li>

@code {
    [Parameter] public Entry Entry { get; set; } = default!;

    public string TypeName => Entry.Type.ToString().ToLower();

    public void Delete()
    {
        File.From(Entry.PathToFile).Delete();
    }
}